  "scripts": {
    "production:db:push": "dotenv -e .env.production -- npx prisma db push",
    "production:prisma:studio": "dotenv -e .env.production -- npx prisma studio",
    "timeout": "node -e \"require('node:timers/promises').setTimeout(3_000)\"",
    "docker:build:run": "npm run docker:build && npm run docker:run",
    "docker:run": "docker run --env-file .env -p80:3000 tatugaschool-server ",
    "docker:build": "docker build -t tatugaschool-server .",
    "docker:build:run:test": "npm run docker:build:test && npm run docker:run:test",
    "docker:run:test": "docker run -d --rm -p 80:3000   -e DATABASE_URL=$DATABASE_URL   -e CLIENT_URL=$CLIENT_URL   -e EMAIL_NAME_SERVICE=$EMAIL_NAME_SERVICE   -e EMAIL_PASSWORD_SERVICE=$EMAIL_PASSWORD_SERVICE   -e GOOGLE_CLIENT_ID=$GOOGLE_CLIENT_ID   -e GOOGLE_CLIENT_SECRET=$GOOGLE_CLIENT_SECRET   -e GOOGLE_CALL_BACK=$GOOGLE_CALL_BACK   -e GOOGLE_CLOUD_PROJECT_ID=$GOOGLE_CLOUD_PROJECT_ID   -e GOOGLE_CLOUD_PRIVATE_KEY_ID=$GOOGLE_CLOUD_PRIVATE_KEY_ID   -e GOOGLE_CLOUD_PRIVATE_KEY_ENCODE=$GOOGLE_CLOUD_PRIVATE_KEY_ENCODE   -e GOOGLE_CLOUD_CLIENT_EMAIL=$GOOGLE_CLOUD_CLIENT_EMAIL   -e GOOGLE_CLOUD_STORAGE_MEDIA_BUCKET=$GOOGLE_CLOUD_STORAGE_MEDIA_BUCKET   -e JWT_ACCESS_SECRET=$JWT_ACCESS_SECRET   -e JWT_REFRESH_SECRET=$JWT_REFRESH_SECRET   -e STUDENT_JWT_ACCESS_SECRET=$STUDENT_JWT_ACCESS_SECRET   -e STUDENT_JWT_REFRESH_SECRET=$STUDENT_JWT_REFRESH_SECRET   -e STRIPE_SECRET_KEY=$STRIPE_SECRET_KEY   -e STRIPE_WEBHOOK_SECRET=$STRIPE_WEBHOOK_SECRET   -e WHEEL_OF_NAME_SECRET_KEY=$WHEEL_OF_NAME_SECRET_KEY   -e VAPID_PUBLIC_KEY=$VAPID_PUBLIC_KEY   -e VAPID_PRIVATE_KEY=$VAPID_PRIVATE_KEY   -e VAPID_EMAIL=$VAPID_EMAIL   -e NODE_ENV=test  --name tatuga-ci-container tatugaschool-server-test",
    "docker:build:test": "docker build -f Dockerfile.test -t tatugaschool-server-test .",
    "docker:stop:test:ci": "docker stop tatuga-ci-container && docker rm tatuga-ci-container",
    "prisma:generate": "dotenv -e .env.test -- prisma generate",
    "prisma:dev:deploy": "dotenv -e .env.test -- prisma db push",
    "db:dev:rm": "docker compose rm database_TATUGA_SCHOOL -s -f -v",
    "db:dev:up": "docker compose up database_TATUGA_SCHOOL -d",
    "db:dev:restart": "npm run db:dev:rm && npm run db:dev:up  && npm run prisma:dev:deploy && npm run prisma:generate ",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev:prod": "dotenv -e .env.production -- nest start --watch",
    "start:dev": "nest start  --watch ",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "dotenv -e .env.test --  jest --verbose --maxWorkers 1",
    "studio:db:test": "dotenv -e .env.test --  npx prisma studio",
    "test:watch": "dotenv -e .env.test --  jest --watch --verbose",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
